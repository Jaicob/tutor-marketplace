  <form class="registration">
    <div class="callout--login-redirect">
      <p>Already Registered? <a href="{{ url }}">Login Here</a></p>
    </div>
    <div class="form-group">
      <label for="text">Text Input <abbr title="Required">*</abbr></label>
      <input id="text" class="form-control" type="text" placeholder="Text Input">
    </div>
    <div class="form-group">
      <label for="emailaddress">Email Address</label>
      <input id="emailaddress" class="form-control" type="email" placeholder="name@email.com">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" class="form-control" type="password" placeholder="Type your Password">
    </div>
    <input type="submit" class="btn--signup" value="Sign Me Up!" />
  </form>