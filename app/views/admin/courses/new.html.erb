<div class="row">
  <div class="small-12 columns">
    <h1>New Course</h1>
  </div>
</div>

<div class="row">
  <%= form_for :course, url: admin_courses_path do |f| %>
    <div class="small-3 columns">
      <%= f.label :school_id %>
      <%= f.collection_select :school_id, School.all, :id, :name, include_blank: true %>
    </div>

    <div class="small-3 columns">
      <p>Need to add Subject, not sure how though right now</p>
    </div>

    <div class="small-3 columns">
      <%= f.label :call_number %>
      <%= f.number_field :call_number %>
    </div>

    <div class="small-3 columns">
      <%= f.label :friendly_name %>
      <%= f.text_field :friendly_name %>
    </div>
</div>

<div class="row">
  <div class="small-3 columns small-offset-9">
    <%= f.submit 'Create Course', class: 'button medium expand' %>
</div>

  <% end %>

<div class="row">
  <div class="small-12 columns">
    <%= link_to 'All Courses', admin_courses_path, class: 'button secondary' %>
  </div>
</div>