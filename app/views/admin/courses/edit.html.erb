<div class="row">
  <div class="small-12 columns">
    <h1>Edit Course</h1>
  </div>
</div>

<div class="row">
  <%= form_for @course, url: "/admin/courses/#{@course.id}" do |f| %>
    <div class="small-3 columns">
      <%= f.label :school_id %>
      <%= f.collection_select :school_id, School.all, :id, :name, include_blank: true %>
    </div>

    <div class="small-3 columns">
      <%= f.label :subject %>
      <%= f.select :subject, [[name: 'Biology', id: 1], ['Chemistry', 2], ['Math', 3], ['Computer Science', 4], ['Physics', 5]] %>
    </div>

    <div class="small-3 columns">
      <%= f.label :call_number %>
      <%= f.number_field :call_number %>
    </div>

    <div class="small-3 columns">
      <%= f.label :friendly_name %>
      <%= f.text_field :friendly_name %>
    </div>
</div>

<div class="row">
  <div class="small-3 columns small-offset-9">
    <%= f.submit 'Update Course', class: 'button medium expand' %>
</div>

  <% end %>

<div class="row">
  <div class="small-12 columns">
    <%= link_to 'All Courses', admin_courses_path, class: 'button secondary' %>
  </div>
</div>