<section class="secondary-content main" role="main">
  <div class="wrapper">

    <div class="g g-3up">
      <div class="gi">
        <h3>Create a New Promotion</h3>
      </div>
      <div class="gi">
      </div>
      <div class="gi">
        <%= link_to 'All Promotions', new_admin_promotion_path, class: 'btn' %>
      </div>
    </div>

    <div class="g g-1up">
      <div class="gi">
        <%= form_for :promotion, url: admin_promotions_path do |f| %>
          <%= f.label :code %>
          <%= f.text_field :code %>

          <%= f.label :category %>
          <%= f.select(:category, options_for_select([['Free'],['Percent Off'],['Dollar Amount Off'],['Semester Package']]), include_blank: true) %>

          <%= f.label :amount %>
          <%= f.number_field :amount %>

          <%= f.label :valid_from %>
          <%= f.date_select :valid_from %>

          <%= f.label :valid_until %>
          <%= f.date_select :valid_until %>

          <%= f.label :redemption_limit %>
          <%= f.number_field :redemption_limit %>
          
          <%= f.submit 'Create Promotion' %>
        <% end %>
      </div>
    </div>

  </div>
</section>