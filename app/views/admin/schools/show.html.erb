<style>
.campus_manager_pic {
  width: 10em;
}
</style>

<div class="row">
  <div class="large-6 columns">
    <h1>School Details</h1>
  </div>
  <div class="large-4 columns">
    <%= link_to 'Back to All Schools', admin_schools_path, class: 'custom-button full-width margin-top-1em blue' %>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Location</th>
          <th>Courses</th>
          <th>Tutors</th>
          <th>Students</th>
          <th>Appts</th>
          <th>Fee</th>
          <th>Edit</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @working_school.id %></td>
          <td><%= @working_school.name %></td>
          <td><%= @working_school.location %></td>
          <td><%= @working_school.courses.count %></td>
          <td><%= @working_school.tutors.count %></td>
          <td><%= @working_school.students.count %></td>
          <td><%= @working_school.appointments.count %></td>
          <td><%= @working_school.transaction_percentage %>%</td>
          <td><a href="#" data-reveal-id="editSchool" class="custom-button full-width">Edit</a></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row margin-bottom-3em">
  <div class="large-12 columns">
    <div class="box">
      <h3>Background Image</h3>
      <% if @working_school.campus_pic.url %>
        <p>Current Image: <a href="<%= @working_school.campus_pic.url %>" target="_blank" class="blue-link">
          <%= @working_school.campus_pic.url.split("/").last %></a>
        </p>
      <% end %>
      <a href="#" data-reveal-id="uploadCampusPicture" class="custom-button">New Campus Picture</a>
    </div>
  </div>
</div>

<div class="row margin-bottom-3em">
  <div class="large-12 columns">
    <div class="box">
      <h3>Campus Manager</h3>

      <% if @working_school.campus_manager %>
        <div class="row">
          <div class="small-12 medium-6 columns">
            <%= image_tag(@working_school.campus_manager.profile_pic_url, class: 'campus_manager_pic') %>
          </div>
          <div class="small-12 medium-6 columns">
            <h6><%= @working_school.campus_manager.full_name %></h6>
            <p><%= @working_school.campus_manager.email %></p>
            <p><%= @working_school.campus_manager.phone_number %></p>
          </div>
        </div>
      <% end %>

      <a href="#" data-reveal-id="editCampusManager" class="custom-button">Edit Campus Manager</a>
    </div>
  </div>
</div>

  <!-- Modal for uploading campus_pic -->
  <div id="uploadCampusPicture" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
    <%= form_for @working_school, url: "/admin/schools/#{@working_school.id}" do |f| %>

      <%= f.label :campus_pic, 'Campus Picture' %>
      <%= f.file_field :campus_pic %>

      <%= f.submit 'Upload Picture', class: 'custom-button' %>
    <% end %>
    <a class="close-reveal-modal" aria-label="Close">&#215;</a>
  </div>
  <!-- End of modal -->

  <!-- Modal for editing school -->
  <div id="editSchool" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
      <%= render 'edit_school' %>
    <a class="close-reveal-modal" aria-label="Close">&#215;</a>
  </div>
  <!-- End of modal -->

  <!-- Modal for editing campus_manager -->
  <div id="editCampusManager" class="reveal-modal tiny" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
      <%= render 'edit_campus_manager' %>
    <a class="close-reveal-modal" aria-label="Close">&#215;</a>
  </div>
  <!-- End of modal -->