<div class="row">
  <div class="large-12 columns">
    <h1>Subject Details</h1>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @subject.id %>
          <td><%= best_in_place @subject, :name, :as => :input %></td>  
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <h4>Are you sure you want to delete this subject?</h4>

    <%= form_for @subject, method: 'delete' do |f| %>
      <%= f.submit 'Delete Subject', class: 'button expand alert' %>
    <% end %>
    
    <%= link_to 'Back', subject_path(@subject), class: 'button expand success' %>
  </div>
</div>