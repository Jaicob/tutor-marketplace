<div class="row">
  <div class="large-12 columns">
    <h1>Schools</h1>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <%= link_to 'Add New School', new_school_path, class: 'button secondary' %>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th width='300'>Name</th>
          <th width='150'>Location</th>
          <th width='150'>Courses</th>
          <th width='150'>Tutors</th>
          <th width='150'>Appointments</th>
          <th>Campus Manager</th>
        </tr>
      </thead>
      <tbody>
        <% @schools.each do |school| %>
        <tr>
          <td><%= school.id %></td>
          <td><%= school.name %></td>
          <td><%= school.location %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td><%= link_to 'View', school_path(school) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>