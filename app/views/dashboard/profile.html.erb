<div class="row">
  <p>Share your profile link: <%= link_to "www.axontutors.com/tutors/#{@tutor.user.friendly_id}", tutor_path(@tutor.user) %></p>
</div>
<div class="row">
  <div class="medium-4 columns">
    <!-- Profile Pic -->
    <div class="profile-section profile-pic-container">
      <!-- Name -->
      <div class="profile-section-header">
        <%= @tutor.user.full_name %>
      </div>
      <a href="#" data-reveal-id="myModal">
        <%= image_tag(@tutor.profile_pic_url(:thumb), class: 'profile-pic') %>
      </a>
    </div>
    <div class="profile-section">
      <div class="profile-section-header">Rating</div>
      <div class="profile-section-inner">
        Good.
      </div>
    </div>
    <div class="profile-section">
      <div class="profile-section-header">Qualifications</div>
      <div class="profile-section-inner">
        <% options = {
          :as => :input,
          :ok_button => "Save",
          :ok_button_class => "button success tiny",
          :cancel_button => 'Cancel',
          :cancel_button_class => "button danger tiny"
        }  %>
        <p> Degree: <%= best_in_place @tutor, :degree, options.merge({ :nil => 'Enter Degree' }) %> </p>
        <p> Major: <%= best_in_place @tutor, :major, options.merge({  :nil => 'Enter Major' }) %> </p>
        <p> Extra Info: <%= best_in_place @tutor, :extra_info, options.merge({ :nil => 'Enter Graduation Year' }) %> </p>
        <p> Graduation Year: <%= best_in_place @tutor, :graduation_year, options %> </p>
      </div>
    </div>
  </div>
  <div class="medium-8 columns">
    <div class="profile-section">
