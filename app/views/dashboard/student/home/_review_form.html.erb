<div class="box">
  <div class="row">
    <div class="small-12 columns">
      <h4>Please review your completed appointments below:</h4>
      <% @appts_to_review.each do |k,v| %>

        <%= form_for :appt_review, url: submit_appt_reviews_student_path, method: :post do |f| %>
          <div class="row">
            <div class="small-12 medium-2 columns">
              <p><%= v[:tutor] %></p>
            </div>
            <div class="small-12 medium-2 columns">
              <p><%= v[:course] %></p>
            </div>
            <div class="small-12 medium-2 columns">
              <p><%= v[:time] %></p>
            </div>
            <div class="small-12 medium-2 columns">
              <%= f.text_area :comments %>
            </div>
            <div class="small-12 medium-2 columns">
              <%= f.label 'Was this session helpful?' %>
              <%= f.select(:rating, options_for_select({'Yes' => :positive, 'No'=> :negative})) %>
            </div>
            <div class="small-12 medium-2 columns">
              <%= f.hidden_field(:appt_id, value: v[:appt_id] ) %>
              <%= f.submit 'Submit Review', class: 'custom-button short-width' %>
            </div>
          </div>
        <% end %>



      <% end %>
    </div>
  </div>
</div>