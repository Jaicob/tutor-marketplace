<style>
/* Do not remove! This must be in the view for it to only highlight the correct selected link in the settings vertical sub-menu */
a.account-settings-link {
  color: white;
  font-weight: 100;
  background-color: #0095AC;
  padding: 0.5em 1em;
  border-radius: 4px;
  border: 1px solid #0095AC;
}
</style>
<section class="dashboard-content">
  <div class="row">
    <div class="small-12 columns">
      <h2 class="dashboard-title">Settings Manager</h2>
    </div>
  </div>
  <div class="row">
    <div class="small-5 medium-3 columns sub-menu">
      <%= render 'vertical_sub_menu' %>
    </div>
    <div class="small-7 medium-4 medium-offset-1 columns end">
        <%= form_for @user do |f| %>
          <h3>User Account Settings</h3>

          <%= f.label :first_name %>
          <%= f.text_field :first_name %>

          <%= f.label :last_name %>
          <%= f.text_field :last_name %>

          <%= f.label :email %>
          <%= f.email_field :email %>

          <label for="user_school_id">School</label>
          <div class="select-wrapper">
          <select name="user[school_id]" id="user_school_id" class="select-menu" required="true">
            <% School.all.each do |school| %>
              <% if school == current_user.school %>
                <option selected="selected" value="<%= school.id %>"><%= school.name %></option>
              <% else %>
                <option value="<%= school.id %>"><%= school.name %></option>
              <% end %>
            <% end %>
          </select>
          </div>

          <%= f.submit 'Save', class: 'custom-button' %>
        <% end %>
    </div>
  </div>
</section>