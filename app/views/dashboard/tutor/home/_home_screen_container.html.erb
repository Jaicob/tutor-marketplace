<section class="dashboard-content tutor-home-page">
  <!-- Partials of all the various info boxes/widgets for the home screen can be placed here -->
  <div class="row">
    <div class="small-12 columns">
      <div class="upcoming-appts">
        <h4>Upcoming Appointments</h4>
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Time</th>
              <th>Subject</th>
              <th>Student</th>
              <th>Contact</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @tutor.appointments.each do |appt| %>
              <% student = Student.find(appt.student_id) %>
            <tr>
              <td><%= appt.start_time.strftime("%b %-d") %></td>
              <td><%= appt.start_time.strftime("%l:%M%P") %></td>
              <td><%= Course.find(appt.course_id).formatted_name %></td>
              <td><%= student.full_name %></td>
              <td><%= student.email %></td>
              <td>Actions</td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 medium-6 columns">
      <div class="metrics">
        <h4>Metrics</h4>
        <div class="box">
          <h3 class="center">$<%= @tutor.total_income %></h3>
          <p class="center">Total Revenue</p>
          <h3 class="center"><%= @tutor.appointments.count %></h3>
          <p class="center">Total Appointments</p>
        </div>
      </div>
    </div>
    <div class="small-12 medium-6 columns">
      <div class="campus-manager">
        <h4>Your Campus Manager</h4>
        <div class="box">
          <p>Stuff goes here...</p>
        </div>
      </div>
    </div>
  </div>
</section>


