<section class="dashboard-content">
  <% if @tutor.application_status == 'Incomplete' %>
    <!-- only application shows (no other home screen stuff) until application is completed -->
    <%= render 'tutors/application' %>
  <% elsif @tutor.application_status == 'Complete' %>
    <!-- only awaiting approval message shows until submitted application is approved -->
    <%= render 'tutors/awaiting_approval' %>
  <% elsif @tutor.application_status == 'Approved' %>
    <!-- normal home screen once application is completed and approved-->
    <%= render 'home_screen_container' %>
  <% end %>
</section>