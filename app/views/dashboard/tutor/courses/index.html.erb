<style>
.dashboard-title {
  padding: 0 0 0.5em;
  margin: 0;
}
.sub-menu {
  padding-left: 0;
}
.sub-menu a {
  color: #4F5252;
  font-weight: 100;
  padding-left: 0.4em;
}
.sub-menu a:hover {
  font-weight: 400;
}
a.account-settings-link {
  color: white;
  font-weight: 100;
  background-color: #0095AC;
  padding: 0.4em 1em;
  border-radius: 5px;
}
a.account-settings-link:hover {
  font-weight: 100;
}
</style>
<section class="dashboard-content">
  <div class="row">
    <h2 class="dashboard-title">My Courses</h2>
  </div>
  <div class="row">
    <% if !@tutor.courses_approved? %>
      <%= render 'dashboard/tutor/courses/courses_welcome' %>
    <% end %>
    <%= render 'dashboard/tutor/courses/add_course_form' %>
    <%= render 'dashboard/tutor/courses/show_courses' %>
  </div>
</section>