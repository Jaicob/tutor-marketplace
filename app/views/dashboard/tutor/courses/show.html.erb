<section class="dashboard-content">
  <div class="row">
    <h2 class="dashboard-title">Course Details</h2>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= link_to 'Return to Courses', tutor_courses_path(@tutor.slug), class: 'btn' %>
      <table>
        <thead>
          <tr>
            <th>Subject</th>
            <th>Call Number</th>
            <th>Course Name</th>
            <th>My Rate</th>
            <th>Full Price</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @tutor_course.course.subject.name %></td>
            <td><%= @tutor_course.course.call_number %></td>
            <td><%= @tutor_course.course.friendly_name %></td>
            <td>$<%= @tutor_course.rate %></td>
            <td>$<%= @tutor_course.full_price %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="small-12 medium-3 columns">
      <h4>Change Rate</h4>
      <%= form_for @tutor_course, url: tutor_course_path(@tutor, @tutor_course), method: :put do |f| %>
        <%= f.label :rate, 'Hourly Rate' %>
        <%= f.text_field :rate, size: 5 %>
        <%= f.submit 'Update Rate', class: 'custom-button' %>
      <% end %>
    </div>
    <div class="small-12 medium-3 columns">
      <h4>Delete Course</h4>
      <%= button_to('Delete Course', "/tutors/#{current_user.slug}/courses/#{@tutor_course.id}", method: 'delete', class: 'custom-button blue') %>
    </div>
  </div>
</section>