<style>
.dashboard-title {
  padding: 0.5em 0;
  margin: 0;
}
.sub-menu {
  padding-left: 0;
}
.sub-menu a {
  color: #4F5252;
  font-weight: 100;
  padding-left: 0.4em;
}
.sub-menu a:hover {
  font-weight: 400;
}
a.account-settings-link {
  color: white;
  font-weight: 100;
  background-color: #0095AC;
  padding: 0.4em 1em;
  border-radius: 5px;
}
a.account-settings-link:hover {
  font-weight: 100;
}
</style>
<section class="dashboard-content">
  <div class="row">
    <h2 class="dashboard-title">Setttings Manager</h2>
  </div>
  <div class="row">
    <div class="small-5 large-3 columns sub-menu">
      <%= render 'vertical_sub_menu' %>
    </div>
    <div class="small-7 large-4 large-offset-1 columns end">
      <%= form_for @user do |f| %>

        <%= f.label :first_name %>
        <%= f.text_field :first_name %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name %>

        <%= f.label :email %>
        <%= f.email_field :email %>

        <label for="user_school_id">School</label>
        <div class="select-wrapper">
        <select name="user[school_id]" id="user_school_id" class="select-menu" required="true">
          <% School.all.each do |school| %>
            <% if school == current_user.school %>
              <option selected="selected" value="<%= school.id %>"><%= school.name %></option>
            <% else %>
              <option value="<%= school.id %>"><%= school.name %></option>
            <% end %>
          <% end %>
        </select>
        </div>

        <%= f.submit 'Save', class: 'custom-button' %>
      <% end %>

      <%= form_for @tutor do |f| %>

        <%= f.label :birthdate %>
        <%= f.date_field :birthdate %>

        <%= f.label :phone_number %>
        <%= f.telephone_field :phone_number %>

        <%= f.submit 'Save', class: 'custom-button' %>
      <% end %>
    </div>
  </div>
</section>