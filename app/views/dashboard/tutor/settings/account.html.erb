<style>
a.account-settings-link {
  color: white;
  font-weight: 100;
  background-color: #0095AC;
  border: 1px solid black;
  padding: 0.4em 1em;
  border-radius: 5px;
}
a.account-settings-link:hover {
  font-weight: 100;
}
</style>


<section class="dashboard tutor">
  <div class="wrapper">
    <div class="wrapper__text">
      <h2 class="title">Setttings Manager</h2>
    </div>
    <div class="g g-3up">
      <div class="gi">
        <%= render 'vertical_sub_menu' %>
      </div>
      <div class="gi">
        <%= form_for @user do |f| %>
          <h3>User Account Settings</h3>

          <%= f.label :first_name %>
          <%= f.text_field :first_name %>

          <%= f.label :last_name %>
          <%= f.text_field :last_name %>

          <%= f.label :email %>
          <%= f.email_field :email %>

          <label for="user_school_id">School</label>
          <div class="select-wrapper">
          <select name="user[school_id]" id="user_school_id" class="select-menu" required="true">
            <% School.all.each do |school| %>
              <% if school == current_user.school %>
                <option selected="selected" value="<%= school.id %>"><%= school.name %></option>
              <% else %>
                <option value="<%= school.id %>"><%= school.name %></option>
              <% end %>
            <% end %>
          </select>
          </div>

          <%= f.submit 'Save', class: 'button tiny expand success' %>
        <% end %>
      </div>
      <div class="gi"></div>
    </div>
  </div>
</section>

<div class="row">
  <h2>Setttings Manager</h2>
</div>
<div class="row">
  <div class="medium-3 columns">
    <%= render 'vertical_sub_menu' %>
  </div>
  <div class="medium-6 columns">
    <p>All information on this page is private and only accesible to Axon administrators.</p>

    <%= form_for @tutor do |f| %>
      <h3>Personal Information</h3>

      <%= f.label :birthdate %>
      <%= f.date_field :birthdate %>

      <%= f.label :phone_number %>
      <%= f.telephone_field :phone_number %>

      <%= f.submit 'Save', class: 'button tiny expand success' %>
    <% end %>

    <%= form_for @tutor do |f| %>
      <h3 id="transcript">Transcript</h3>

      <p>Current Transcript: 
        <% if @tutor.transcript.url.nil? %>
          None
        <% else %>
          <%= link_to File.basename(@tutor.transcript.path), @tutor.transcript.url, target: '_blank' %>
        <% end %>
      </p>

      <%= f.label :transcript %>
      <%= f.file_field :transcript %>

      <%= f.submit 'Save', class: 'button tiny expand success' %>
    <% end %>
  </div>
</div>