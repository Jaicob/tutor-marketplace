<div class="row">
  <div class="medium-3 columns">
    <%= render 'vertical_sub_menu' %>
  </div>
  <div class="medium-8 medium-offset-1 columns">
    <div class="row">
      <div id="payment" class="medium-6 columns">
        <%= form_for @tutor do |f| %>
          <%= f.label :line1, 'Address Line 1' %>
          <%= f.text_field :line1 %>

          <%= f.label :line2, 'Address Line 2' %>
          <%= f.text_field :line2 %>

          <%= f.label :city %>
          <%= f.text_field :city %>

          <%= f.label :state %>
          <%= f.select :state, us_states %>

          <%= f.label :postal_code %>
          <%= f.text_field :postal_code %>

          <%= f.submit 'Update Address', class: 'button success tiny expand' %>

        <% end %>
      </div>
    </div>
  </div>
</div>