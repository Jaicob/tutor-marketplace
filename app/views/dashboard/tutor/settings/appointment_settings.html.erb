<style>
/* Do not remove! This must be in the view for it to only highlight the correct selected link in the settings vertical sub-menu */
a.appt-settings-link {
  color: white;
  font-weight: 100;
  background-color: #0095AC;
  padding: 0.5em 1em;
  border-radius: 4px;
  border: 1px solid #0095AC;
}
</style>
<section class="dashboard-content">
  <div class="row">
    <div class="small-12 columns">
      <h2 class="dashboard-title">Settings Manager</h2>
    </div>
  </div>
  <div class="row">
    <div class="small-5 medium-3 columns sub-menu">
      <%= render 'vertical_sub_menu' %>
    </div>
    <div class="small-7 medium-4 medium-offset-1 columns end">
      <%= form_for @tutor do |f| %>
        <%= f.label :appt_notes, 'Personal Note to Students' %>
        <p>This note will be sent to your students in the appointment confirmation email. You can supply a general greeting or request for your students here.</p>
        <%= f.text_area :appt_notes, rows: 10 %>

        <%= f.submit 'Save', class: 'custom-button full-width' %>
      <% end %>
    </div>
  </div>
</section>