<style>
/* Do not remove! This must be in the view for it to only highlight the correct selected link in the settings vertical sub-menu */
a.appt-history-link {
  color: white;
  font-weight: 100;
  background-color: #0095AC;
  padding: 0.5em 1em;
  border-radius: 4px;
  border: 1px solid #0095AC;
}
</style>
<section class="dashboard-content">
  <div class="row">
    <div class="small-12 columns">
      <h2 class="dashboard-title">Settings Manager</h2>
    </div>
  </div>
  <div class="row">
    <div class="small-5 medium-3 columns sub-menu">
      <%= render 'vertical_sub_menu' %>
    </div>
    <div class="small-7 medium-4 medium-offset-1 columns end">
        <% if @tutor.appointments.count == 0 %>
          <p>You do not have any appointments yet.</p>
        <% else %>
          <table>
            <thead>
              <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Subject</th>
                <th>Student</th>
                <th>Contact</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @tutor.appointments.where(status: 'Scheduled').each do |appt| %>
              <% student = Student.find(appt.student_id) %>
                <tr>
                  <td><%= appt.start_time.strftime("%b %-d") %></td>
                  <td><%= appt.start_time.strftime("%l:%M%P") %></td>
                  <td><%= Course.find(appt.course_id).formatted_name %></td>
                  <td><%= student.full_name %></td>
                  <td><%= student.email %></td>
                  <td><a href="#" data-reveal-id="confirm-cancel-appt-<%= appt.id %>" class="custom-button blue">Cancel</a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
    </div>
  </div>
</section>