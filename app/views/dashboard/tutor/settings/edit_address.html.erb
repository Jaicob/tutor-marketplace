<style>
a.payment-settings-link {
  color: white;
  font-weight: 100;
  background-color: #0095AC;
  padding: 0.4em 1em;
  border-radius: 5px;
}
a.payment-settings-link:hover {
  font-weight: 100;
}
</style>
<section class="dashboard-content">
  <div class="row">
    <h2 class="dashboard-title">Setttings Manager</h2>
  </div>
  <div class="row">
    <div class="small-5 large-3 columns sub-menu">
      <%= render 'vertical_sub_menu' %>
    </div>
    <div class="small-7 large-4 large-offset-1 columns end"> 
      <%= form_for @tutor do |f| %>
        
        <%= f.label :line1, 'Address Line 1' %>
        <%= f.text_field :line1 %>

        <%= f.label :line2, 'Address Line 2' %>
        <%= f.text_field :line2 %>

        <%= f.label :city %>
        <%= f.text_field :city %>

        <%= f.label :state %>
        <%= f.select :state, us_states %>

        <%= f.label :postal_code %>
        <%= f.text_field :postal_code %>

        <%= f.submit 'Update Address', class: 'button success tiny expand' %>

      <% end %>
    </div>
  </div>
</section>