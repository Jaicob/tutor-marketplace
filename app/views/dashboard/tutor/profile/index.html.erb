<section class="dashboard-content">
  <div class="row">
    <div class="small-12 columns">
      <h1>Profile Preview</h1>
    </div>
  </div>
  <div class="row">
    <div class="small-12 medium-9 columns">
      <p>Share your profile link: <%= link_to "www.axontutors.com/tutors/#{@tutor.slug}", tutor_path(@tutor.user), class: 'blue-link' %></p>
    </div>
    <div class="small-12 medium-3 columns">
      <%= link_to 'Edit Profile', edit_profile_tutor_path(@tutor.slug), class: 'custom-button full-width' %>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= render 'tutor_profile' %>
    </div>
  </div>
</section>