<section class="dashboard-content">
  <% if @tutor.active_status == 'Inactive' %>
    <%= render 'profile_hidden_message' %>
  <% end %>
  <div class="row">
    <div class="small-12 columns">
      <h1>Profile Preview</h1>
    </div>
  </div>
  <div class="row">
    <div class="small-12 medium-8 columns">
      <p>Share your profile link: <%= link_to public_profile_tutor_url, public_profile_tutor_path, class: 'blue-link' %></p>
    </div>
    <div class="small-12 medium-4 columns">
      <p><%= link_to 'Edit Profile', edit_profile_tutor_path(@tutor.slug), class: 'custom-button full-width' %></p>
    </div>  
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= render 'tutor_profile' %>
    </div>
  </div>
</section>