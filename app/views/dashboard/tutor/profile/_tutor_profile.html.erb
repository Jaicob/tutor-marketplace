<section class="tutor-profile">
  <div class="row">
    <div class="medium-12 columns">
      <h1 class="title"><%= @tutor.full_name %></h1>
    </div>
    <div class="tutor-image medium-4 columns">
      <%= image_tag(@tutor.profile_pic_url(:thumb), class: 'profile-pic') %>
      <div class="where-i-tutor medium-12 columns">
        Tutor at<br>
        <b><%= @tutor.school && @tutor.school.name %></b>
      </div>
    </div>
    <div class="tutor-qualifications medium-8 columns">
      <div class="tutor-profile-formal-education">
        <p class="ed-item">
          <%# [X] TODO (AJ) Make these bullets into icons from Eugene %>
          <%= image_tag('https://s3-us-west-2.amazonaws.com/axontutors/booking/Degree.png', class: "icon") %>
          <%= @tutor.degree || "None" %>, <%= @tutor.graduation_year || "None" %>
        </p>
        <p class="ed-item">
          <%= image_tag('https://s3-us-west-2.amazonaws.com/axontutors/booking/Graduation.png', class: "icon") %>
          <%= @tutor.major || "None" %>
        </p>
      </div>
      <div class="tutor-profile-description">
        <%= @tutor.extra_info_1 %></li>
        <hr>
        <%= @tutor.extra_info_2 %></li>
        <hr>
        <%= @tutor.extra_info_3 %></li>
      </div>
    </div>
  </div>
</section>