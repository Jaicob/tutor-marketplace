<div class="row small-collapse">
  <div class="small-12 columns">
    <div class="row">
      <div class="small-12 columns">
        <div class="box vertical-margin-2em vertical-padding-2em">
          <div class="row">
            <div class="small-12 medium-4 columns">
              <%= image_tag(@tutor.profile_pic_url(:thumb), class: 'border-radius') %>
              <h2 class="center"><%= public_name(@tutor) %></h2>
              <p class="center no-bottom-margin">Tutor at</p>
              <h5 class="center"><%= @tutor.school.name %></h5>
            </div>
            <div class="small-12 medium-8 columns">
              <h5>Education</h5>
              <p><i class="fi-book-bookmark margin-right-1em"></i><%= @tutor.degree %> <%= @tutor.major %>, <%= @tutor.graduation_year %></p>
              <h5>Experience</h5>
              <p><%= @tutor.extra_info_1 %></p>
              <p><%= @tutor.extra_info_2 %></p>
              <p><%= @tutor.extra_info_3 %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
