<h3>Payment Settings</h3>
<% if @tutor.check_profile_for(:payment_info) %>
  <h4>Address</h4>
  <p><%= @tutor.line1 %><br>
     <%= @tutor.line2 %><br>
     <%= @tutor.city %>, <%= @tutor.state %> <%= @tutor.postal_code %>
  </p>
  <p>Active account: ******<%= @tutor.last_4_acct %></p>
  <%= link_to "Edit Payment Settings", tutor_payment_info_form_tutor_path(@tutor), remote: true %>
<% else %>
  <%= link_to "Set up payment settings", tutor_payment_info_form_tutor_path(@tutor), class: 'button success', remote: true %>
<% end %>