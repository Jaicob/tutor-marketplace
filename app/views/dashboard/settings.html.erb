<%= form_for :data, url: "/#{@user.id}/settings", method: 'put' do |f| %>
  <%= f.fields_for :user do |user| %>
    <%= user.label :first_name %>
    <%= user.text_field :first_name, value: @user.first_name %>
    <%= user.label :last_name %>
    <%= user.text_field :last_name, value: @user.last_name %>
    <%= user.label :email %>
    <%= user.text_field :email, value: @user.email %>
  <% end %>
  <%= f.fields_for :tutor do |tutor| %>
    <%= tutor.label :birthdate %>
    <%= tutor.date_select :birthdate, value: @tutor.birthdate %>
    <%= tutor.label :phone_number %>
    <%= tutor.text_field :phone_number, value: @tutor.phone_number %>
  <% end %>  
  <%= f.submit 'Submit' %>
<% end %>
