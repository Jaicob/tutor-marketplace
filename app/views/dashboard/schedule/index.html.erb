<%= javascript_include_tag "dashboard/schedule" %>
<!-- <a id="slotpopover" data-url="/slots"></a> -->



<div class="row">
  <div class="medium-12 columns">
    <h1>Your Schedule</h1>
    <h3 class="subheader">Drag from availability to create your schedule.</h3>
  </div>
</div>

<!-- '/api/v1/tutors/64/slots.json' -->
