<div class="row">
  <div class="small-12 medium-6 columns">
    <h1>School List</h1>
  </div>
  <div class="small-12 medium-4 columns">
    <%= link_to 'Add New School', new_admin_school_path, class: 'custom-button full-width margin-top-1em' %>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>ID</th>
          <th>Name</th>
          <th>Location</th>
          <th>Courses</th>
          <th>Tutors</th>
          <th>Students</th>
          <th>Appts</th>
          <th>Total Revenue</th>
          <th>Campus Manager</th>
        </tr>
      </thead>
      <tbody>
        <% n = 1 %>
        <% @schools.each do |school| %>
        <tr>
          <td><%= n %>
          <td><%= link_to school.id, admin_school_path(school), class: 'blue-link' %></td>
          <td><%= school.name if school.name %></td>
          <td><%= school.location if school.location %></td>
          <td><%= school.courses.count %></td>
          <td><%= school.tutors.count %></td>
          <td><%= school.students.count %></td>
          <td><%= school.appointments.count %></td>
          <td>--</td>
          <td><%= school.campus_manager.full_name if school.campus_manager %></td>
        </tr>
        <% n += 1 %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>