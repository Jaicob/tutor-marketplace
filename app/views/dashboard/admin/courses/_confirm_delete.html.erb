<div class="row">
  <div class="medium-12 columns">
    <h4>Course Details</h4>
  </div>
</div>

<div class="row">
  <div class="medium-12 columns">
    <table>
      <thead>
        <tr>
          <th>School</th>
          <th>Subject</th>
          <th>Call Number</th>
          <th>Friendly Name</th>
          <th>Tutors</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @course.school.name %></td>
          <td><%= @course.subject.name %></td>
          <td><%= @course.call_number %></td>
          <td><%= @course.friendly_name %></td>
          <td><%= @course.tutors.count %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="medium-12 columns">
    <h4>Are you sure you want to delete this course?</h4>
  </div>
</div>

<div class="row">
  <div class="medium-4 columns">
    <%= link_to 'Back', admin_course_path(@course), class: 'custom-button full-width' %>
  </div>
  <div class="medium-4 columns">
    <%= form_for @course, url: admin_course_path(@course), method: 'delete' do |f| %>
      <%= f.submit 'Delete', class: 'custom-button full-width danger' %>
    <% end %>
  </div>
</div>