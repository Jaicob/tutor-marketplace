<div class="row">
  <div class="medium-8 columns">
    <h3>Course ID: <%= @course.id %></h3>
  </div>
  <div class="medium-4 columns">
    <%= link_to 'Back to Course List', admin_courses_path, class: 'custom-button full-width gray' %>
  </div>
</div>

<div class="row">
  <div class="medium-12 columns">
    <h4>Details</h4>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>School</th>
          <th>Subject</th>
          <th>Call Number</th>
          <th>Friendly Name</th>
          <th>Tutors</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @course.id %>
          <td><%= @course.school.name %></td>
          <td><%= @course.subject.name %></td>
          <td><%= @course.call_number %></td>
          <td><%= @course.friendly_name %></td>
          <td><%= @course.tutors.count %></td>
          <td><%= link_to 'Edit', edit_admin_course_path(@course), class: 'custom-button short-width blue' %>
          <td><a href="#" data-reveal-id="confirmDeleteCourse" class="custom-button short-width danger">Delete</a></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<!-- Modal for deleting course -->
<div id="confirmDeleteCourse" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
    <%= render 'confirm_delete' %>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>
<!-- End of modal -->