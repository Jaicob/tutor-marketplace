<% session[:checkout_step] = 1 %>
<% @checkout_step = session[:checkout_step] %>

<% if @checkout_step == 1 %>
  <%= render '/checkout/steps/course_list' %>
<% elsif @checkout_step == 2 %>
  <%= render '/checkout/steps/available_times' %>
<% elsif @checkout_step == 3 %>
  <%= render '/checkout/steps/set_location' %>
<% elsif @checkout_step == 4 %>
  <%= render '/checkout/steps/summary' %>
<% elsif @checkout_step == 5 %>
  <%= render '/checkout/steps/login' %>  
<% end %>