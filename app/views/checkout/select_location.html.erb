<%= render '/dashboard/tutor/profile/tutor_profile' %>

<div class="row">
  <div class="small-12 columns">
    <%= form_for :location_selection, url: checkout_set_location_path, method: :post do |f| %>
      <div class="checkout-step-title">
        <div class="row">
          <div class="small-12 columns">
            <p>Suggest a Meeting Place</p>
          </div>
        </div>
      </div>
      <div class="checkout-step-body">
        <div class="row">
          <div class="small-12 columns">
            <div class="row">
              <div class="small-12 columns">
                <h5 class="center no-max-width">Your tutor will contact you to confirm a meeting place after your booking is complete.</h5>
              </div>
            </div>
            <div class="row">
              <div class="small-12 columns">
                <p class="center margin-auto margin-top-1em margin-bottom-1em">Axon tutors are encouraged to meet students on campus, so great suggestions are your campus library, student center or a coffee shop on or very near campus.</p>
              </div>
            </div>
            <div class="row">
              <div class="small-12 columns">
                <h5 class="center no-max-width">Suggest one or two meeting places that work well for you:</h5>
              </div>
            </div>
            <div class="row">
              <div class="small-12 medium-4 medium-centered columns">
                <%= f.text_field :location, value: session[:location] %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="checkout-steps-nav">
        <div class="row small-collapse">
          <div class="small-12 columns">
            <div class="row small-collapse">
              <div class="small-12 medium-3 columns zero-padding">
                <%= link_to "Back to Set a Time", checkout_select_times_path(@tutor.slug), class: 'checkout-button gray' %>
              </div>
              <div class="small-12 medium-3 columns zero-padding">
                <%= f.submit "Next Step", class: 'custom-button full-width checkout-submit' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>