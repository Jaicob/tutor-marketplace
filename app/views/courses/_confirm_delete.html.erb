<h1>Course Details</h1>

<table>
  <thead>
    <tr>
      <th>School</th>
      <th>Subject</th>
      <th>Call Number</th>
      <th>Friendly Name</th>
      <th>Tutors</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @course.school_name %></td>
      <td><%= @course.subject_name %></td>
      <td><%= @course.call_number %></td>
      <td><%= @course.friendly_name %></td>
      <td><%= @course.tutors.count %></td>
    </tr>
  </tbody>
</table>

<h1>Are you sure you want to delete this course?</h1>

  <%= form_for @course, method: 'delete' do |f| %>
    <%= f.submit 'Delete' %>
  <% end %>
  
  <%= link_to 'Back', course_path(@course) %>
  

