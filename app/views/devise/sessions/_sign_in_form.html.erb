<section class="main register login" role="main">
  <div class="wrapper">
    <h1 class="title">Login</h1>
    <%= devise_error_messages! %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'registration form-group', role: 'form'}) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <%= f.submit 'Login', class: 'btn--login' %>
      <div class="checkbox" style="width:150px">
        <label>
          <%= f.check_box :remember_me %> Remember me
        </label>
      </div>
    <% end %>
    <p><%= link_to 'Sign up', new_registration_path(resource_name) %></p>
    <p><%= link_to "Forgot password?", new_password_path(resource_name) %></p>
  </div>
</section>