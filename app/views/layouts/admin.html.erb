<style type="text/css">
.dropdown.button {
  margin: 0;
}
.header-block {
  display: block;
}
.admin-row {
  background-color: #00BFB3;
}
.admin-title {
  padding: 0.7em;
  text-align: center;
  font-size: 1.5em;
  color: #fff;
  font-weight: 800;
  margin-bottom: 0;
}
.school-name {
  text-align: center;
  color: #fff;
  padding-bottom: 1em;
  margin-bottom: 0;
}
.school-select {
  display: inline-block;
  float: right;
}
button.button.dropdown.school-select-dropdown {
    margin-top: -6em;
    margin-right: 1em;
}
</style>

<% content_for (:dashboard_nav) do %>
  
  <!-- This is just a placeholder, hence the ugly in-line CSS -->
  <div class="header-block admin-row">
    <p class="admin-title">ADMIN PANEL</p>
    <h3 class="school-name">
      <% if @school %>
        <%= @school.name %>
      <% else %>
        Super Admin - All Schools
      <% end %>
    </h3>
    <% if current_user.role == 'super_admin' %>
      <div class="school-select">    
        <button href="#" data-dropdown="drop1" aria-controls="drop1" aria-expanded="false" class="button dropdown school-select-dropdown">Select School</button>
        <ul id="drop1" data-dropdown-content class="f-dropdown" aria-hidden="true">
          <li><%= link_to 'All Schools', admin_home_path %></a></li>
          <% School.all.each do |school| %>
            <li><%= link_to "#{school.name}", school_home_path(school) %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  

  <nav class="breadcrumbs dashboard-nav">
    <% if @school == nil %>
      <%= link_to 'Tutors', admin_tutors_path %>
      <%= link_to 'Students', admin_students_path %>
      <%= link_to 'Appointments', admin_appointments_path %>
      <%= link_to 'Slots', admin_slots_path %>
      <%= link_to 'Courses', admin_courses_path %>
      <%= link_to 'Schools', admin_schools_path %>
    <% else %>
      <%= link_to 'Tutors', school_tutors_path(@school) %>
      <%= link_to 'Students', school_students_path(@school) %>
      <%= link_to 'Appointments', school_appointments_path(@school) %>
      <%= link_to 'Slots', school_slots_path(@school) %>
      <%= link_to 'Courses', school_courses_path(@school) %>
    <% end %>
  </nav>

<% end %>
<%= render template: "layouts/application" %>