<style type="text/css">
.dropdown.button {
  margin: 0;
}
.header-block {
  display: block;
}
.admin-row {
  background-color: #00BFB3;
}
.admin-title {
  padding: 0.7em;
  text-align: center;
  font-size: 1.5em;
  color: #fff;
  font-weight: 800;
  margin-bottom: 0;
}
.school-name {
  text-align: center;
  color: #fff;
  padding-bottom: 1em;
  margin-bottom: 0;
}
.school-select {
  display: inline-block;
  float: right;
}
button.button.dropdown.school-select-dropdown {
    margin-top: -6em;
    margin-right: 1em;
}
</style>

<% content_for (:dashboard_nav) do %>
  
  <!-- This is just a placeholder, hence the ugly in-line CSS -->
  <div class="header-block admin-row">
    <p class="admin-title">ADMIN PANEL</p>
    <h3 class="school-name">SUPER-ADMIN / ALL SCHOOLS</h3>
    <div class="school-select">    
      <button href="#" data-dropdown="drop1" aria-controls="drop1" aria-expanded="false" class="button dropdown school-select-dropdown">Select School</button>
      <ul id="drop1" data-dropdown-content class="f-dropdown" aria-hidden="true">
        <li><a href="#">University of Georgia</a></li>
        <li><a href="#">University of North Carolina</a></li>
        <li><a href="#">Clemson University</a></li>
        <% if current_user.role == 'super_admin' %>
          <li><a href="#">All Schools</a></li>
        <% end %>
      </ul>
    </div>
  </div>

  <nav class="breadcrumbs dashboard-nav">
    <%= link_to 'Tutors', admin_tutors_path %>
    <%= link_to 'Students', admin_students_path %>
    <%= link_to 'Appointments', admin_appointments_path %>
    <%= link_to 'Slots', admin_slots_path %>
    <%= link_to 'Courses', admin_courses_path %>
    <%  if current_page %>
      <%= link_to 'Schools', admin_schools_path %>
    <% end %>
  </nav>

<% end %>
<%= render template: "layouts/application" %>