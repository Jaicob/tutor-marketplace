<footer class="footer" role="contentinfo">
  <div class="wrapper">
    <div class="footer-logo">
      <%= image_tag('logo_white.png', class: 'footer-logo') %>
    </div>
    <ul class="nav-footer">
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Find a Tutor',search_path %></li>
      <li><%= link_to 'About', about_path %></li>
      <li><%= link_to 'FAQ', faqs_path %></li>
      <% if !current_user %>
        <li><%= link_to 'Become a Tutor', become_a_tutor_path %></li>
      <% end %>
      <li><%= link_to 'Contact', contact_path %></li>
      <li><%= link_to 'Partners', partners_path %></li>
    </ul>     
    <div class="footer-secondary-links">
      <ul>
        <li><%= link_to 'Terms and Conditions', terms_and_conditions_path %></li>
        <li><%= link_to 'Privacy Policy', privacy_policy_path %></li>
      </ul>
      <ul class="social-nav">
        <li>
          <%= link_to('https://www.facebook.com/axontutors', target: '_blank') do %>
            <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/facebook-logo-circle.png" alt="Facebook">
          <% end %>
        </li>
        <li>
          <%= link_to('https://twitter.com/axontutors', target: '_blank') do %>
            <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/twitter-logo-circle.png" alt="Twitter">
          <% end %>
        </li>
      </ul>     
    </div>
  </div>
</footer>