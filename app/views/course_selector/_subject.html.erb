<!-- Place immediately inside of parent div with correct grid sizing -->
<% if @school %>
  <!-- Sets the school for the course_selector with a hidden field so that the school dropdown can be ommited in some views (i.e. when the school is already set for a logged-in tutor or student) -->
  <div style="display: none;">
    <select name="course[school_id]" id="school" required="true">
      <option selected="true" value="<%= @school.id %>">School</option>
    </select>
  </div>
  <!-- Beginning of actual subject select that is shown, in the context of no school select (because it's already set) -->
  <select name="course[subject_id]" id="subject" class="select-menu" required="true">
    <option disabled="true" selected="true" value="">Subject</option>
    <% @school.subjects.each do |subject| %>
      <option value="<%= subject[:id] %>"><%= subject[:name] %></option>
    <% end %>
  </select>
<% else %>
  <!-- Displays subjects dynamically generated by jQuery for school selected in school dropdown -->
  <select name="course[subject_id]" id="subject" class="select-menu" required="true">
    <option disabled="true" selected="true" value="">Subject</option>
  </select>
<% end %>