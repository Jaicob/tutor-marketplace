<!-- Place immediately inside of parent div with correct grid sizing -->
<% if @school && !request.fullpath.start_with?(become_a_tutor_path) %>
  <!-- Only displays a user's set school in search when a user is logged in -->
  <select name="course[school_id]" id="school" class="select-menu" required="true">
    <option selected="true" value="<%= @school.id %>">
      <%= @school.name %>
    </option>
  </select>
<% else %>
  <!-- Displays all schools in form for student sign-up and search for visitors -->
  <select name="course[school_id]" id="school" class="select-menu" required="true">
    <option selected="true" value="<%= @school.id %>"><%= @school.name %></option>
    <% School.all.each do |school| %>
      <% if school.id != @school.id %>
        <option value="<%= school.id %>"><%= school.name %></option>
      <% end %>
    <% end %>
  </select>
<% end %>





