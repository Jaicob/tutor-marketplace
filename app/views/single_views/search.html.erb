<%= javascript_include_tag "single_views/indirect_search" %>
<%= javascript_include_tag "single_views/search" %>

<div class="search-header-bg">
  <div class="row">
    <div class="small-12 columns">
      <h2 class="search-title">Find Your Tutor</h2>
    </div>
  </div>
  <div class="row">
  <div class="small-12 medium-8 columns">
    <div class="row medium-collapse course-search-box">
      <div class="small-12 medium-5 columns">
        <%= form_for :search, url: search_from_home_path, method: :post do |f| %>
          <%= render '/course_selector/subject' %>
      </div>
      <div class="small-12 medium-5 columns">
          <%= render '/course_selector/course' %>
      </div>
      <div class="small-12 medium-2 columns">
          <%= f.submit 'Search', class: 'custom-button full-width', id: 'course-search-submit' %>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <div id="tutorCardContainer" class="cards">
      <p>Find your local <%= @school.name %> tutor.</p>
      <p>Select a subject and course to begin.</p>
    </div>
  </div>
</div>